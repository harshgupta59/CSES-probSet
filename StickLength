int main()
{
#ifndef ONLINE_JUDGE
	freopen("input.txt", "r", stdin);
	freopen("output.txt", "w", stdout);
#endif
	int n;
	cin >> n;
	ll a[n], sum = 0, ans = 0;
	for (int i = 0; i < n; i++) {
		cin >> a[i];
		sum += a[i];
	}
	sort(a, a + n);
	sum = a[n / 2];
	for (int i = 0; i < n; i++)
		ans += abs(a[i] - sum);

	cout << ans << endl;
}
